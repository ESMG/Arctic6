        <codeBase version="$(NULL_TAG)"> ice_param.git </codeBase>
      </source>
      <compile>
         <cppDefs><![CDATA[$(F2003_FLAGS) -D_FILE_VERSION="'"`git-version-string $<`"'"]]></cppDefs>
